body
  color #666666
  font-family Arial, Helvetica, sans-serif
  font-size 16px

label
  display block
  padding 5px
  font-weight bold

input[type="submit"]:hover, input[type="button"]:hover, button:hover
  cursor pointer

.form
  width 300px
  margin 0 auto

.text-field
  border 1px solid #cccccc
  border-radius 5%
  padding 5px
  height 18px
  display block
  width 300px
  color #383A3F

.submit-button
  width 300px
  height 40px
  background #30A9DE
  color #ffffff
  border-radius 5%
  margin 10px 0
  padding 5px
  border 1px solid #fafafa
  text-align center

.page-title
  text-align center
  text-transform uppercase
