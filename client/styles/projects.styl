/* PROJECTS INDEX PAGE */
.projects
  display grid
  grid-gap 20px

.projects__list
  border-left 4px solid var(--main-color)
  padding 0
  margin 0

.projects__item, .projects__item--done
  list-style none
  padding 10px 8px
  border-bottom 1px solid #A3BAC3
  display grid
  grid-template-columns 1fr 1fr 1fr


.projects__item:last-child
  border none

.projects__item-title
  text-decoration none
  display block
  color #006989
  text-transform uppercase
  font-size 1.5em

.projects__item-title:hover
  color #01A7C2

/* SINGLE PROJECT PAGE */

.project__description
  display grid
  grid-gap  20px
  grid-template-columns 1fr 1fr
  margin 50px 0px
  color #333
  padding 10px
  border-bottom 4px solid #006889

.project__motivation
  background #fffdfd
  display grid
  padding-left 10px
  border-left 4px solid #006889

.motivation-paragraph
  justify-self center
  align-self center

.project__motivation a
  color #006989
  text-decoration none
  border-bottom 1px solid #006989

.project__motivation a:hover
  color #A3BAC2
