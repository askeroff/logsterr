.projects-list
  border-left 4px solid #006989
  padding 0

.projects-list-item
  list-style none
  padding 10px 8px
  border-bottom 1px solid #A3BAC3
  display flex
  justify-content space-between

.projects-list-item:last-child
  border none

.project-list-title
  text-decoration none
  display block
  color #006989
  text-transform uppercase
  font-size 1.5em

.project-list-title:hover
  color #01A7C2

.timer-block
  background #006989
  color #fff
  border-bottom none

.timer-item
  font-weight bold
  padding-right 20px

.timelog-title
  margin-bottom 10px
  margin-top: 10px
  background #eee
  padding 5px
  text-align center

.pagination
  margin-top 10px
  text-align center
  display flex
  justify-content space-between

.pagination a
  background #353f51
  color #fafafa
  padding 6px