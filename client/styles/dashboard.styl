
.dashboard__parent .dashboard__item-title
  background #006989
  color #f1f1f1
  padding 8px
  border none

.dashboard__item-title
  color #006989
  border-left 4px solid #a3bac3
  padding 8px


.dashboard__item-tasks
  padding-left 15px

.dashboard__item-task
  padding 5px

.dashboard__select
  outline 0
  text-transform uppercase
  border 1px solid #dbdbdb
  border-radius 2px

.dashboard__title
  text-transform uppercase

.dashboard__select:hover
  cursor pointer

.dashboard__header
  display flex
  justify-content flex-start
  margin 30px 0px
