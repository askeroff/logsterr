:root
  --main-color #006989
  --second-color #065371
  --danger #dc3545
  --info #17a2b8
  --info-text #fff

html, body
  height 100%
  min-height 100%
  margin 0
  padding 0
  line-height 1

body
  color #666666
  font-family Arial, Helvetica, sans-serif
  font-size 16px

button:focus
  outline 0

#app
  height 100%
  min-height 100%

.wrapper
  display grid
  grid-template-rows auto 1fr auto
  min-height 100%

.content-wrapper
  width 80%
  margin 0 auto
  max-width 1200px

.page-title
  text-align center
  text-transform uppercase
  color #007090
  margin-left 0
  margin-right 0


/* HEADER */
@import 'header.styl'

label
  display block
  padding 5px
  font-weight bold
  text-align center

input[type="submit"]:hover, input[type="button"]:hover, button:hover
  cursor pointer

.form__signup, .form__login
  display grid
  justify-content center

.text-field
  border 1px solid #A3BAC3
  padding 10px
  color #383A3F

.server-response
  text-align center
  font-weight bold
  padding 10px

.inline-form
  display inline-block

.sign:hover
  cursor pointer

.edit-form
  width auto

.edit-form .text-field
  display inline-block

.strikethrough
  text-decoration line-through
  color #ccc

.message
  padding 0.75rem 1.25rem
  margin-bottom 1rem
  border 1px solid transparent
  border-radius 0.25rem
  font-weight 400
  line-height 1.3

.message p
  margin 0
  padding 4px 0px

.message--info a, .message--error a
  color #ffffff
  text-decoration none
  border-bottom 1px solid var(--info-text)

.message--info
  background var(--info)
  color var(--info-text)

.message--error
  background var(--danger)
  color var(--info-text)

.pretty-time
  background #006889
  color #ffffff
  padding 5px
  margin-left 10px

.pagination
  margin-top 10px
  text-align center
  display flex
  justify-content space-between

.pagination a
  background #353f51
  color #fafafa
  padding 6px

/* PROJECTS */
@import 'projects.styl'
/* TASKS */
@import 'tasks.styl'
/* TIMER */
@import 'timer.styl'
/* TIMELOGS */
@import 'timelog.styl'
/* DASHBOARD */
@import 'dashboard.styl'
/* BUTTONS STUFF */
@import 'buttons.styl'

/* FOOTER */

footer
  background #006989
  border-top 10px solid var(--second-color)
  color #fafafa
  text-align center
  margin-top 30px

.footer__link
  color #fafafa
  text-decoration none
  border-bottom 1px solid #eeeeee

@media (max-width: 360px) and (max-device-width: 360px)
  .content-wrapper
    margin 0
    width auto

@media (max-width: 960px) and (max-device-width: 960px)
  .page-title .pretty-time
    font-size small
    background #ffffff
    color #007090