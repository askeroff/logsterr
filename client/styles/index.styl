body
  color #666666
  font-family Arial, Helvetica, sans-serif
  font-size 16px

label
  display block
  padding 5px
  font-weight bold

input[type="submit"]:hover, input[type="button"]:hover, button:hover
  cursor pointer

.content-wrapper
  width 80%
  margin 0 auto

.page-title
  text-align center
  text-transform uppercase
  color #007090

.form
  width 310px
  margin 0 auto

.text-field
  border 1px solid #A3BAC3
  padding 4px
  height 18px
  display block
  width 300px
  color #383A3F

.submit-button
  width 300px
  height 40px
  background #006989
  color #ffffff
  margin 10px 0
  padding 5px
  border 1px solid #fafafa
  text-align center
  box-sizing content-box

.link-button
  text-decoration none
  display block
  height 40px
  line-height 40px
  margin 10px auto

.danger-button
  width 60px
  height 20px
  border 1px solid #ededed
  text-align center
  background #E53A40
  color #fff

.info-button
  width 60px
  height 20px
  border 1px solid #ededed
  text-align center
  background #006989
  color #fff

.link
  display inline-block
  text-decoration none
  padding 1px 6px

.server-response
  text-align center
  font-weight bold
  padding 10px

.inline-form
  display inline-block

.sign:hover
  cursor pointer

.edit-form
  width auto

.edit-form .text-field
  display inline-block

.strikethrough
  text-decoration line-through
  color #ccc

.loading
  position absolute
  left 50%
  top 50%
  margin -60px 0 0 -60px
  background #fff
  width 100px
  height 100px
  border-radius 100%
  border 10px solid #19bee1


.loading:after
  content ''
  background trasparent
  width 140%
  height 140%
  position absolute
  border-radius 100%
  top -20%
  left -20%
  opacity 0.7
  box-shadow rgba(40, 52, 60, 0.6) -4px -5px 3px -3px
  animation rotate 2s infinite linear


@keyframes rotate
  0%
    transform rotateZ(0deg)

  100%
    transform rotateZ(360deg)



@import 'header.styl'
@import 'projects.styl'
