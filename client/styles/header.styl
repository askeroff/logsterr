.header
  background var(--main-color)
  border-bottom 10px solid var(--second-color)
  padding 5px
  margin-bottom 10px

.nav__item
  list-style none
  display inline-block
  padding 0 5px
  color #ffffff

.nav__item a
  color #fafafa
  text-decoration none

.nav__item a:hover
  color #EAEBED
  border-bottom 1px solid #A3BAC3

.nav__user
  font-style italic
  font-size 12px