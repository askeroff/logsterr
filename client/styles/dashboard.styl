
.dashboard__item
  border-bottom 1px solid #006989

.dashboard__item-title
  color #006989

.dashboard__item-tasks
  padding-left 15px

.dashboard__item-task
  border-left 4px dotted #a3bac3
  padding 5px

.dashboard__select
  outline 0
  text-transform uppercase
  border 1px solid #dbdbdb
  border-radius 2px

.dashboard__title
  text-transform uppercase

.dashboard__select:hover
  cursor pointer

.dashboard__header
  display flex
  justify-content flex-start
  margin 30px 0px
